{
	"name": "ender",
	"version": "0.2.0",
	"description": "A modular bot extendable with plugins",
	"license": "SEE LICENSE IN LICENSE.md",
	"author": {
		"name": "Tyler Richards",
		"email": "hello@tjrgg.xyz"
	},
	"funding": "https://github.com/Enderverse/Ender?sponsor=1",
	"repository": "Enderverse/Ender",
	"engines": {
		"node": ">=12.0.0",
		"npm": "use-yarn",
		"yarn": ">=1.22.0"
	},
	"main": "src/index.js",
	"private": true,
	"scripts": {
		"commit": "commit",
		"lint": "yarn run lint:all",
		"lint:all": "yarn run lint:core && yarn run lint:plugins",
		"lint:all:fix": "yarn run lint:core:fix && yarn run lint:plugins:fix",
		"lint:core": "xo",
		"lint:core:fix": "xo --fix",
		"lint:plugins": "cd plugins && xo",
		"lint:plugins:fix": "cd plugins && xo --fix",
		"postversion": "git push && git push --tags",
		"start": "node src/index.js",
		"test": "ava tests/index.js",
		"update": "yarn upgrade"
	},
	"dependencies": {
		"discord.js": "discordjs/discord.js#fe7df70",
		"dotenv": "^8.2.0",
		"dotenv-parse-variables": "^0.2.3",
		"execa": "^4.0.0",
		"express": "^4.17.1",
		"express-session": "^1.17.0",
		"fs-nextra": "^0.4.5",
		"hasha": "^5.2.0",
		"helmet": "^3.21.2",
		"klasa": "dirigeants/klasa#settings",
		"klasa-member-gateway": "dirigeants/klasa-member-gateway#settings",
		"lowdb": "^1.0.0",
		"p-wait-for": "^3.1.0",
		"package-json": "^6.5.0",
		"passport": "^0.4.1"
	},
	"devDependencies": {
		"@commitlint/prompt-cli": "^8.3.5",
		"ava": "^2.4.0",
		"commitlint": "^8.3.5",
		"commitlint-config-enderverse": "Enderverse/commitlint-config-enderverse",
		"eslint": "^6.3.0",
		"eslint-config-enderverse": "Enderverse/eslint-config-enderverse",
		"husky": "^4.2.3",
		"lint-staged": "^10.0.7",
		"mocha": "^7.0.1",
		"sinon": "^8.1.1",
		"xo": "^0.26.1"
	},
	"commitlint": {
		"extends": [
			"enderverse"
		]
	},
	"eslintConfig": {
		"extends": [
			"enderverse"
		]
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.js": [
			"xo --fix"
		]
	},
	"xo": {
		"extends": [
			"enderverse"
		],
		"overrides": [
			{
				"files": [
					"src/languages/**/*.js"
				],
				"rules": {
					"unicorn/filename-case": "off"
				}
			},
			{
				"files": [
					"tests/**/*.js"
				],
				"rules": {
					"func-names": "off",
					"prefer-arrow-callback": "off"
				}
			}
		],
		"space": false
	}
}